#!/usr/bin/env zsh

source "$PAPER_DIR/paper-defs.zsh"

build="$PAPER_DIR/build"
auxfile="$build/$name.aux"
bibfile="$PAPER_DIR/text/references.bib"

echo "Filtering bibliography"
refs="$build/references.txt"
paper get-text \
| paper extract-refs \
> $refs
bib-filter --clean \
  --keys $refs $BIBTEX_LIBRARY $bibfile

