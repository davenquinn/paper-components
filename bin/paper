#!/usr/bin/env zsh

dn="$(pwd)"
if [ -z "$PAPER_DIR" ]; then
  # Find directory
  while [ ! -e "$dn/paper-defs.zsh" ]; do
    if [ "$dn" = "/" ]; then
      echo -e "$(tput bold)paper-defs.zsh$(tput sgr0) not found in $(pwd) or any parent directory."
      exit 1
    fi
    dn="${dn:h}"
  done
  echo -e "$(tput bold)Found paper directory$(tput sgr0): $dn"

  export PAPER_DIR="$dn"
fi

export PAPER_COMPONENTS="${0:A:h:h}"
bin="$PAPER_COMPONENTS/bin"
export PATH="$bin:$PATH"

if [ -z $1 ] || [ $1 = '--help' ]; then
  echo "Commands:"
  ls "$bin" | grep paper- | sed 's/paper-/  paper /g'
  exit 0
fi

cmd="paper-$1"
shift

found_command=0
for f in $(ls "$bin" | grep paper-); do
  [ $f != $cmd ] && continue
  found_command=1
  break
done

[ ! $found_command ] && echo "Command $cmd not found"

"$bin/$cmd" $@

